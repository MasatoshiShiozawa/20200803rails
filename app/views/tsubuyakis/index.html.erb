<div class="container">
  <header class="header clearfix">
    <p>マイつぶやきホーム</p>
  </header>
  <p id="notice"><%= notice %></p>

<%= form_with(model: @tsubuyaki, local: true ,url: confirm_tsubuyakis_path ) do |form| %>
  <div class="tsubuyaki_content">
    <%= form.label :今どうしてる？ %>
    <%= form.text_area :content, :size=>"100x5"  %>
  </div>
  <div class="actions">
    <%= form.submit value="つぶやく"%>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3">過去のつぶやき</th>
    </tr>
  </thead>

  <tbody>
    <% @tsubuyakis.each do |tsubuyaki| %>
      <tr>
        <td id="content_width"><%= tsubuyaki.content %></td>
        <td id="edit_width"><%= link_to '編集', edit_tsubuyaki_path(tsubuyaki) %></td>
        <td id="destroy_width"><%= link_to '削除', tsubuyaki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<footer class="footer clearfix">
  <p>© TSUBUYAKI Corp. All RIGHTS RESERVED.</p>
</footer>
</div>
